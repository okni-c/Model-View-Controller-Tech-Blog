<div class="container px-4 px-lg-5">
  <div class="row gx-4 gx-lg-5 justify-content-center">
    <div class="col-md-10 col-lg-8 col-xl-7">
      <article>
        <a href="/dashboard"> &larr; Back to dashboard</a>
        <br /><br />
        <h2>
          Edit Post
        </h2>
        <form class="edit-post-form">
          <div>
            <input name="post-title" type="text" value="{{post.title}}" />
            <span>({{format_url post.post_url}})</span>
          </div>
          <div>
            {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
          </div>
          <br />
          <button class="btn btn-outline-success" type="submit">Save post</button>
          <button class="btn btn-outline-danger delete-post-btn" type="button" >Delete post</button>
        </form>
      </article>
      <br />
      <form class="comment-form">
        <div>
          <textarea class="form-control" name="comment-body" placeholder="Type your comment here..."></textarea>
        </div>
        <br />
        <div>
          <button class="btn btn-outline-primary" type="submit">Add a comment</button>
        </div>
      </form>
      <br />

      {{> comments post.comments}}

    </div>
  </div>
</div>

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>