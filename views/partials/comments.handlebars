{{#each this}}
<div class="card" style="width: auto">
  <div class="card-body">
    <h5 class="card-title"><span><img src="/img/profile-icon.png" width="18"></span>   {{user.username}}</h5>
    <h6 class="card-subtitle mb-3 text-muted">Posted on {{format_date created_at}}</h6>
    <p class="card-text">{{comment_text}}</p>
  </div>
</div>
<hr class="my-4" />
{{/each}}